{
  "name": "app",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "run-s prettier:l eslint:l tsc:l",
    "format": "run-s prettier:f eslint:f",
    "eslint:l": "eslint 'src/**/*.ts'",
    "eslint:f": "eslint --fix 'src/**/*.ts'",
    "prettier:l": "prettier --check --log-level silent src",
    "prettier:f": "prettier --write --log-level silent src",
    "tsc:l": "tsc --noEmit",
    "tsc:w": "tsc --noEmit --watch",
    "vt": "vitest",
    "test": "npm run vt run",
    "test:watch": "npm run vt watch",
    "test:cov": "npm run vt run --coverage && open coverage/index.html",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.504.0",
    "@felte/validator-zod": "^1.0.17",
    "@sendgrid/mail": "^7.7.0",
    "axios": "^1.6.7",
    "dynmr": "1.7.7",
    "felte": "^1.2.14",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.1",
    "@sveltejs/adapter-auto": "^2.1.1",
    "@sveltejs/kit": "^1.30.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.14",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "autoprefixer": "^10.4.17",
    "cssnano": "^6.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-svelte": "^2.35.1",
    "eslint-plugin-tailwindcss": "^3.14.1",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "prettier-plugin-svelte": "^3.1.2",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "svelte": "^4.2.9",
    "svelte-check": "^3.6.3",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^4.5.2",
    "vitest": "^0.34.6"
  }
}
